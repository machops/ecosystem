# eco-base v1.0 — API Gateway Deployment & Service (eco-production)
# Target: GKE eco-production cluster (asia-east1)
apiVersion: apps/v1
kind: Deployment
metadata:
  name: eco-api-gateway
  namespace: eco-production
  labels:
    app.kubernetes.io/name: eco-api-gateway
    app.kubernetes.io/part-of: eco-base
    environment: production
spec:
  replicas: 3
  selector:
    matchLabels:
      app: eco-api-gateway
  template:
    metadata:
      labels:
        app: eco-api-gateway
        app.kubernetes.io/name: eco-api-gateway
        app.kubernetes.io/part-of: eco-base
        environment: production
    spec:
      serviceAccountName: eco-sa
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
        fsGroup: 1000
      containers:
        - name: eco-api-gateway
          image: asia-east1-docker.pkg.dev/my-project-ops-1991/eco-base/gateway:v1.0.0
          ports:
            - containerPort: 8000
              protocol: TCP
          envFrom:
            - configMapRef:
                name: eco-config
            - secretRef:
                name: eco-secrets
          resources:
            requests:
              cpu: 200m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
          livenessProbe:
            httpGet:
              path: /health
              port: 8000
            initialDelaySeconds: 10
            periodSeconds: 15
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            httpGet:
              path: /health
              port: 8000
            initialDelaySeconds: 5
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 3
---
apiVersion: v1
kind: Service
metadata:
  name: eco-gateway-svc
  namespace: eco-production
  labels:
    app.kubernetes.io/name: eco-api-gateway
    app.kubernetes.io/part-of: eco-base
    environment: production
spec:
  type: ClusterIP
  selector:
    app: eco-api-gateway
  ports:
    - port: 8000
      targetPort: 8000
      protocol: TCP
      name: http
