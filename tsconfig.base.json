{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@eco-base/ui-kit":      ["./packages/ui-kit/src/index.ts"],
      "@eco-base/api-client":  ["./packages/api-client/src/index.ts"],
      "@eco-base/shared-types":["./packages/shared-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".storybook"]
}
