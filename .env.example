# ── IndestructibleEco v1.0 — Environment Configuration ────────────────
# URI: indestructibleeco://config/env
# Copy to .env and customize for your environment
# All variables use the ECO_* prefix for namespace isolation

# ── Application ───────────────────────────────────────────────────────
ECO_ENVIRONMENT=production
ECO_DEBUG=false
ECO_LOG_LEVEL=INFO
ECO_HOST=0.0.0.0
ECO_PORT=8000
ECO_WORKERS=4

# ── Security ──────────────────────────────────────────────────────────
ECO_SECRET_KEY=change-me-use-openssl-rand-hex-32
ECO_JWT_SECRET=change-me-use-openssl-rand-hex-64
ECO_RATE_LIMIT_PER_MINUTE=600

# ── Database (PostgreSQL) ─────────────────────────────────────────────
ECO_POSTGRES_HOST=postgres
ECO_POSTGRES_PORT=5432
ECO_POSTGRES_USER=indestructibleeco
ECO_POSTGRES_PASSWORD=eco_secret
ECO_POSTGRES_DB=indestructibleeco

# ── Cache (Redis) ─────────────────────────────────────────────────────
ECO_REDIS_HOST=redis
ECO_REDIS_PORT=6379
ECO_REDIS_PASSWORD=
ECO_REDIS_URL=redis://redis:6379

# ── Celery (Async Task Queue) ────────────────────────────────────────
ECO_CELERY_BROKER=redis://redis:6379/0
ECO_CELERY_BACKEND=redis://redis:6379/1

# ── AI Service ────────────────────────────────────────────────────────
ECO_AI_HTTP_PORT=8001
ECO_AI_GRPC_PORT=8000
ECO_AI_MODELS=vllm,ollama,tgi,sglang
ECO_AI_SERVICE_GRPC=ai:8000
ECO_AI_SERVICE_HTTP=http://ai:8001

# ── Vector Alignment ─────────────────────────────────────────────────
ECO_VECTOR_DIM=1024
ECO_ALIGNMENT_MODEL=quantum-bert-xxl-v1
ECO_ALIGNMENT_TOLERANCE=0.001

# ── Inference Engines ─────────────────────────────────────────────────
ECO_DEFAULT_ENGINE=vllm
ECO_ENGINE_TIMEOUT_SECONDS=120
ECO_MAX_CONCURRENT_REQUESTS=256

# vLLM
ECO_VLLM_HOST=vllm
ECO_VLLM_PORT=8001
ECO_VLLM_GPU_MEMORY_UTILIZATION=0.90
ECO_VLLM_MAX_MODEL_LEN=32768
ECO_VLLM_TENSOR_PARALLEL_SIZE=1

# TGI
ECO_TGI_HOST=tgi
ECO_TGI_PORT=8002

# SGLang
ECO_SGLANG_HOST=sglang
ECO_SGLANG_PORT=8003

# Ollama
ECO_OLLAMA_HOST=ollama
ECO_OLLAMA_PORT=11434

# TensorRT-LLM
ECO_TENSORRT_HOST=tensorrt-llm
ECO_TENSORRT_PORT=8004

# LMDeploy
ECO_LMDEPLOY_HOST=lmdeploy
ECO_LMDEPLOY_PORT=8005

# ── Models ────────────────────────────────────────────────────────────
ECO_MODEL_CACHE_DIR=/models
ECO_DEFAULT_MODEL=meta-llama/Llama-3.1-8B-Instruct
ECO_VISION_MODEL=Qwen/Qwen2.5-VL-7B-Instruct
ECO_WHISPER_MODEL=openai/whisper-large-v3-turbo
ECO_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# ── RAG / Vector DB ──────────────────────────────────────────────────
ECO_VECTOR_DB_HOST=milvus
ECO_VECTOR_DB_PORT=19530

# ── Supabase ──────────────────────────────────────────────────────────
ECO_SUPABASE_URL=
ECO_SUPABASE_KEY=

# ── CORS ──────────────────────────────────────────────────────────────
ECO_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Service Discovery ────────────────────────────────────────────────
ECO_CONSUL_ENDPOINT=http://consul:8500

# ── Tracing ───────────────────────────────────────────────────────────
ECO_JAEGER_ENDPOINT=http://jaeger:14268/api/traces
ECO_ENABLE_TRACING=true

# ── Monitoring ────────────────────────────────────────────────────────
ECO_PROMETHEUS_PORT=9090
ECO_GRAFANA_PORT=3000

# ── External API Keys ────────────────────────────────────────────────
HF_TOKEN=