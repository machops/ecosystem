# IndestructibleEco v1.0 — Environment Variables
# Copy to .env.local and fill in values
# All variables use ECO_* prefix

# ── Application ──
ECO_ENVIRONMENT=development
ECO_LOG_LEVEL=info

# ── AI Service ──
ECO_AI_HTTP_PORT=8001
ECO_AI_GRPC_PORT=8000
ECO_AI_MODELS=vllm,ollama,tgi,sglang
ECO_AI_SERVICE_URL=http://localhost:8001
ECO_API_SERVICE_URL=http://localhost:3000

# ── Redis / Celery ──
ECO_REDIS_URL=redis://localhost:6379
ECO_CELERY_BROKER=redis://localhost:6379/0
ECO_CELERY_BACKEND=redis://localhost:6379/1

# ── Vector Alignment ──
ECO_VECTOR_DIM=1024
ECO_ALIGNMENT_MODEL=quantum-bert-xxl-v1
ECO_ALIGNMENT_TOLERANCE=0.001

# ── FAISS Index ──
ECO_FAISS_ENABLED=true
ECO_FAISS_INDEX_TYPE=IVFFlat
ECO_FAISS_NPROBE=16
ECO_FAISS_NLIST=256
ECO_FAISS_USE_GPU=false
ECO_FAISS_PERSIST_DIR=/tmp/eco-faiss

# ── Elasticsearch ──
ECO_ES_ENABLED=false
ECO_ES_HOSTS=http://localhost:9200
ECO_ES_INDEX_PREFIX=eco-vectors
ECO_ES_USERNAME=
ECO_ES_PASSWORD=

# ── Neo4j ──
ECO_NEO4J_ENABLED=false
ECO_NEO4J_URI=bolt://localhost:7687
ECO_NEO4J_USERNAME=neo4j
ECO_NEO4J_PASSWORD=
ECO_NEO4J_DATABASE=neo4j

# ── Database (Supabase) ──
ECO_SUPABASE_URL=http://localhost:54321
ECO_SUPABASE_ANON_KEY=
ECO_SUPABASE_SERVICE_KEY=
ECO_DB_PASSWORD=eco_dev_password

# ── Auth ──
ECO_JWT_SECRET=change_me_in_production

# ── CORS ──
ECO_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Service Discovery ──
ECO_CONSUL_ENDPOINT=http://localhost:8500

# ── Tracing ──
ECO_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ── Grafana ──
GF_ADMIN_PASSWORD=eco_grafana

# ── Audit ──
ECO_AUDIT_LOG_DIR=.eco-audit
