{
  "name": "@indestructibleeco/desktop",
  "version": "1.0.0",
  "description": "IndestructibleEco Desktop Application â€” Electron 29 + Vite",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron .",
    "build": "vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-updater": "^6.1.0",
    "better-sqlite3": "^9.4.0",
    "@indestructibleeco/ui-kit": "workspace:*",
    "@indestructibleeco/api-client": "workspace:*",
    "@indestructibleeco/shared-types": "workspace:*"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "io.indestructibleeco.desktop",
    "productName": "IndestructibleEco",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "identity": null
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "release"
    }
  },
  "private": true
}