{
  "name": "@eco-base/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently &quot;vite&quot; &quot;wait-on http://localhost:5174 && electron .&quot;",
    "build": "vite build && electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "electron-updater": "^6.3.0",
    "better-sqlite3": "^11.0.0",
    "@eco-base/api-client": "workspace:*"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^24.13.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "vite": "^5.3.0",
    "typescript": "^5.5.0"
  },
  "build": {
    "appId": "io.eco-base.desktop",
    "productName": "eco-base",
    "directories": { "output": "build" },
    "mac": { "target": "dmg", "icon": "resources/icon.icns" },
    "win": { "target": "nsis", "icon": "resources/icon.ico" }
  }
}