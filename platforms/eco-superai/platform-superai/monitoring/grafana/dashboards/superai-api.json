{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(eco-base_http_requests_total[5m])) by (method)",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "title": "Error Rate (5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(eco-base_http_requests_total{status=~&quot;5..&quot;}[5m])) / sum(rate(eco-base_http_requests_total[5m])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "thresholds": { "steps": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 1 },
          { "color": "red", "value": 5 }
        ]}}
      }
    },
    {
      "title": "Request Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(eco-base_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(eco-base_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(eco-base_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Requests by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(eco-base_http_requests_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "title": "HTTP Status Distribution",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(increase(eco-base_http_requests_total[1h])) by (status)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "title": "Active Connections",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "sum(eco-base_http_requests_total) - sum(eco-base_http_requests_total offset 1m)",
          "legendFormat": "Active"
        }
      ]
    },
    {
      "title": "Avg Response Time",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(eco-base_http_request_duration_seconds_sum[5m])) / sum(rate(eco-base_http_request_duration_seconds_count[5m]))",
          "legendFormat": "Avg"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "thresholds": { "steps": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 0.5 },
          { "color": "red", "value": 2 }
        ]}}
      }
    },
    {
      "title": "Auth Failures",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(eco-base_http_requests_total{status=&quot;401&quot;}[5m]))",
          "legendFormat": "401 Unauthorized"
        },
        {
          "expr": "sum(rate(eco-base_http_requests_total{status=&quot;403&quot;}[5m]))",
          "legendFormat": "403 Forbidden"
        },
        {
          "expr": "sum(rate(eco-base_http_requests_total{status=&quot;429&quot;}[5m]))",
          "legendFormat": "429 Rate Limited"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    }
  ],
