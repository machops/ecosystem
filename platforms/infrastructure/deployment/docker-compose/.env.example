# MachineNativeOps Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production
DEBUG_MODE=false

# Database Configuration
DB_PASSWORD=change-this-password-in-production
DATABASE_URL=postgresql://machineops:change-this-password-in-production@postgres:5432/machineops

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password-in-production
REDIS_URL=redis://:change-this-redis-password-in-production@redis:6379/0

# Security Configuration
ENCRYPTION_KEY=change-this-32-byte-encryption-key
SIGNING_KEY=change-this-64-byte-signing-key-1234567890123456

# API Configuration
API_SECRET_KEY=change-this-api-secret-key-min-32-chars
API_SIGNING_KEY=change-this-api-signing-key-min-64-chars

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-grafana-password

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=machine-native-ops-backups

# GCP Configuration (if using GCP)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_CREDENTIALS_PATH=/path/to/gcp-credentials.json

# Azure Configuration (if using Azure)
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_REGION=eastus
AZURE_STORAGE_ACCOUNT=machineopsstorage

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your-pagerduty-api-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@machinenativeops.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE=0 2 * * *

# Secrets Rotation Configuration
SECRET_ROTATION_ENABLED=true
ROTATION_INTERVAL_DAYS=30

# Performance Configuration
MAX_WORKERS=4
TIMEOUT_SECONDS=30
RETRY_COUNT=3
CONNECTION_POOL_SIZE=10

# TLS/SSL Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/etc/nginx/ssl/cert.pem
TLS_KEY_PATH=/etc/nginx/ssl/key.pem